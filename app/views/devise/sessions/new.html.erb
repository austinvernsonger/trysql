<body>
<div class="container-fluid">
<div class="span6">
<h2>Sign In</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>
  
  <% if devise_mapping.rememberable? -%>
     <br />
	 Remember me<%= f.check_box :remember_me %>
  <% end -%>
  <br />
  <%= f.submit "Sign in" %>
<% end %>
<%= render "links" %>
  </div>
</div>
</div>
</body>
