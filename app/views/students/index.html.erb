<h1>Listing students</h1>

<table border= "1">
  <tr>
    <th>Name</th>
    <th>Id</th>
    <th>show</th>
    <th>edit</th>
    <th>delete</th>
  </tr>

<% @students.each do |student| %>
  <tr>
    <td><%= student.name %></td>
    <td><%= student.id %></td>
    <td><%= link_to 'x', student %></td>
    <td><%= link_to 'x', edit_student_path(student) %></td>
    <td><%= link_to 'x', student, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Student', new_student_path %>
